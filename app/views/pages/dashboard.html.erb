<div class="wrapper">
  <h2>Hello <%= current_user.first_name %> </h2>
  <div class="shift-box">
    <h3>Your next Shift</h3>


    <div class="shift-card">
      <div class="shift-card-left-side">
        <h2 class="shift-card-left-side-title"><%= @next_shift.slot_id %></h2>
        <div class="d-flex align-items-center">
        <i class="shift-card-icon fas fa-clock"></i>
          <p class="shift-card-time">06:00 - 18:00</p>
        </div>
      </div>

      <div class="shift-card-right-side">
        <p class="shift-card-date"><%= @next_shift.date %></p>
        <div class="d-flex align-items-center">
          <i class="shift-card-icon fas fa-coins"></i>
          <p class="shift-card-points">30 bps</p>
        </div>
      </div>


    </div>
  </div>



  <div class="shift-box">
    <h3>New open shifts</h3>
    <div class="shiftCard">
      <%= current_user.user_shifts.first %>
      <%= current_user.user_shifts.first %>
      <%= current_user.user_shifts.first %>
    </div>
  </div>
</div>
