<div class="d-flex flex-column align-items-center justify-content-center">
  <br>
  <h2><strong><%= t 'your_profile' %></strong></h2>
  <div class="col1 avatar-box">
    <% unless current_user.photo.attached? %>
      <img src="<%= asset_path('default_avatar.png') %>" width="40" alt="default-avatar-image" class="card-trip-user avatar-bordered">
    <% else %>
      <img src="<%= cl_image_path(current_user.photo.key, width: 120, height: 120, crop: :thumb, gravity: :face) %>" alt="avatar-image" class="card-trip-user avatar-bordered">
    <% end %>
  </div>
  <div class="col2 box">
    <div class="d-flex justify-content-between">
      <h3 id="name"><strong><%= current_user.first_name %>&nbsp<%= current_user.last_name %></strong></h3>
      <i class="fas fa-pencil-alt pencil"></i>
    </div>
    <div class="parent-box">
      <div class="text">
        <i class="fas fa-book-medical i"></i>
        <%= current_user.experience_level %>
      </div>
      <div class="text">
        <i class="fas fa-user-tie i"></i>
        <%= current_user.functional_role.name %>
      </div>
      <div class="text">
        <i class="fas fa-coins i"></i>
        <%= current_user.bonus_points %> bps
      </div>
      <div class="quote">
        <i class="fas fa-bullhorn shout"></i></i>
        "<%= current_user.additional_infos %>"
      </div>
    </div>
  </div>
  <div class="col3 box">
    <div class="d-flex justify-content-between">
      <h3 id="name"><strong><%= t 'current_prizes' %></strong></h3>
    </div>
    <div class="parent-box">
      <% Prize.all.each do |prize| %>
        <div class="text">
          <i class="fas fa-award i"></i>
          <%= prize.bonus_points %> <%= t 'bps_for' %>:
          <%= prize.prize %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="preferred-slots">
    <h3 class="preferred-slot-tag"><strong><%= t 'your_preferred_slots' %></strong></h3>
    <div class="grid-container">
      <div class="grid-item"></div>
      <div class="grid-item slot-label-early"><%= t 'early' %></div>
      <div class="grid-item slot-label-late"><%= t 'late' %></div>
      <div class="grid-item slot-label-night"><%= t 'night' %></div>
      <div class="grid-item day"><%= t 'monday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="monday1" checked>
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="monday2" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="monday3" >
      </div>
      <div class="grid-item day"><%= t 'tuesday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="tuesday1" checked>
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="tuesday2" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="tuesday3" >
      </div>
      <div class="grid-item day"><%= t 'wednesday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="wednesday1" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="wednesday2" checked>
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="wednesday3" >
      </div>
      <div class="grid-item day"><%= t 'thursday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="thursday1" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="thursday2" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="thursday3" checked>
      </div>
      <div class="grid-item day"><%= t 'friday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="friday1" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="friday2" checked>
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="friday3" >
      </div>
      <div class="grid-item day"><%= t 'saturday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="saturday1" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="saturday2" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="saturday3" checked>
      </div>
      <div class="grid-item day"><%= t 'sunday' %></div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-early" value="sunday1" >
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-late" value="sunday2" checked>
      </div>
      <div class="grid-item check-box-container">
        <input class="form-check-input" type="checkbox" name="slot-checkbox" id="slot-checkbox-night" value="sunday3" >
      </div>
    </div>
  </div>
  <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "profile-logout-button" %>
</div>
