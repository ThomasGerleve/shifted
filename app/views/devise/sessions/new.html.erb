<div class="login-wrapper">
  <div class="login-wrapper-box">
    <h2 class="login-wrapper-box-heading">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-wrapper-box-form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>
      <div class="login-wrapper-box-form-actions">
        <%= f.button :submit, "Log in", class: "login-wrapper-box-button" %>
      </div>
    <% end %>
  </div>
</div>
