<div class="show-box">
  <div class="d-flex justify-content-between text">
    <h1><%= @user_shift.shift.slot.name.capitalize %> shift</h1>
    <h3 class="shift-card-date-p">
      <%= @user_shift.shift.date.strftime("%b %d") %>
    </h3>
  </div>
  <div class="text">
    <i class="shift-card-icon fas fa-clock i"></i>
    <%= @user_shift.shift.slot.start_time.strftime("%H:%M") %> - <%= @user_shift.shift.slot.end_time.strftime("%H:%M") %>
  </div>
  <div class="text">
    <i class="fas fa-coins i"></i>
    <%= @user_shift.bonus_points %> bps
  </div>
  <div class="text">
    <i class="fas fa-info-circle i"></i>
    <%= @user_shift.details %>
  </div>
  <div class="text">
    <%# avatars to be added here %>
  </div>
  <br>
  <% if !@user_shift.open && @user_shift.user == current_user %>
    <div>
      <%= simple_form_for @user_shift, url: offer_shift_path do |f| %>
        <%= f.input :bonus_points, label: "Do you want to add some bonus points to your offer?", :error_html => { :id => "bonus_points_error" } %>
        <%= f.hidden_field :open, value: true %>
        <%= f.button :submit, "Offer Shift" %>
      <% end %>
    </div>
  <% end %>
  <% if @user_shift.open && @user_shift.user == current_user %>
    <div class="offered-alert"><p>You offered this shift up for grabs</p></div>
    <div>
      <%= link_to retract_offer_path(@user_shift),
      data: {
        controller: "offer",
        action: "click->retract"
      } do %>
        <p class="btn btn-primary mb-0">I Changed My Mind</p>
      <% end %>
    </div>
  <% end %>
  <% if @user_shift.open && @user_shift.user != current_user %>
    <div>
      <%= link_to offer_shift_path(@user_shift) do %>
        <p class="btn btn-primary mb-0">Take Over This Shift</p>
      <% end %>
    </div>
  <% end %>

  <%#= simple_form_for @user_shifts do |f| %>
    <%#= f.input :details %>
    <%# if @user_shifts.persisted? %>
      <%#= f.submit 'Submit offer changes', class:'btn-primary' %>
    <%# else %>
      <%#= f.submit 'Submit new offer', class:'btn-primary' %>
    <%# end %>
  <%# end %>
</div>
